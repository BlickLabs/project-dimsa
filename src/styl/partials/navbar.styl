.site-navbar
  align-items center
  background-color $dGrayBackg
  display flex
  height 153px
  justify-content space-between
  left 0
  padding 0 130px
  position fixed
  top 0
  transition .3s background ease
  width 100%
  z-index 12

  &-logo
    height 89px
    width 174px

.navbar-option-link
  color $dGrayNav
  cursor pointer
  font-size remify(13px)
  letter-spacing 1.9px
  margin-left 30px
  position relative
  text-transform uppercase
  transition all 0.4s

  &.active-link,
  &:hover
    color #6e6e6e
    transition all 0.6s

  &:hover
    .link-decorator
      opacity 1
      transition all 0.4s

  &-container
    display flex
    flex-direction row

.link-decorator
  background-color $dGraySelect
  height 3px
  margin-top 6px
  opacity 0
  width 16px

.decorator-active
  opacity 1

.hamburger-menu-container
  display none

.navbar-hamburguer-visibility
  position absolute

/*dropdown*/

.dropdown
    position relative
    display inline-block

.dropdown-content
  display none
  position absolute
  background-color #f9f9f9
  min-width 160px
  overflow auto
  box-shadow 0px 8px 16px 0px rgba(0,0,0,0.2)
  z-index 1

.dropdown-content a
  background-color #7f7f7f
  color $dWhite
  padding 12px 16px
  text-decoration none
  display block
  transition all 0.4s

.dropdown-content a:hover
  color #6e6e6e
  transition all 0.4s

.dropdown a:hover,
.dropdown a.active-dropdown
  color $dWhite
  background-color $dRedText

.show
  display block

.down-triangle-container
  position absolute
  right -8px
  top 0

.down-triangle
  height 5px
  width 5px

@media screen and (max-width: 876px)
  .site-navbar
    justify-content space-between
    height 56px
    padding 0 18px

    &-logo
      height 40px
      width 78px

  .navbar-option-link-container
    display none

  .navbar-option-link
    display block
    height auto
    display block
    text-align left
    flex-basis 100%

  .navbar-hamburguer-visibility
    position initial
      
  .navbar-hamburguer
    width 33px
    height 33px
    border-radius 50%
    background-color #6e6e6e
    cursor pointer
    display flex
    justify-content center
    
  .align-content-hamburguer
    display flex
    flex-direction column
    justify-content center
    
  .line-hamburguer-base
    height 1px
    background-color #fff

  .line-hamburguer-lg
    width: 15px
    
  .line-hamburguer-md
    width 7.5px
    
  .margin-vertical-4px
    margin 4px 0px

  .hamburger-menu-container
    background-color #6e6e6e
    display inline
    left 0
    padding-bottom 50px
    position fixed
    top 0
    width 0%
    z-index 13
    bottom 0
    overflow scroll
    -webkit-transition width 0.5s
    transition width 0.5s
    
  .hamburger-menu-header
    align-items center
    display flex
    flex-direction row
    justify-content space-between
    padding 22px 36px 50px 36px
    
  .hamburger-logo
    height 52px
    width 102px
    
  .hamburger-close-container
    cursor pointer
    
  .hamburger-close
    height 16px
    width 16px

  .hamburger-menu-body
    margin-left 36px

  .hamburger-option-link
    color #fff
    cursor pointer
    font-size remify(12)
    letter-spacing 1.4px
    margin 20px 0
    text-transform uppercase

    &:hover
      .link-decorator
        opacity 1
        transition all 0.4s

  .link-decorator
    background-color #ffffff
    transition all 0.4s

  .hamburger-text
    padding 10px 0

  .hamburger-dropdown-container
    position relative

  .down-triangle-container
    left 80px
    right initial

  .hamburger-text-container
    margin 30px 0

  .dropdown
    display initial

  .dropdown-content
    box-shadow initial
    margin-left -36px
    position relative

    & a
      padding-left 36px
