.site-navbar
  background-color black
  display flex
  align-items center
  height 78px
  left 0
  position fixed
  top 0
  width 100%
  z-index 12
  padding 0 40px 0 20px
  transition .3s background ease

.navbar-option-link
  color #fff
  font-size remify(12)
  text-transform uppercase
  letter-spacing 1.4px
  cursor pointer
  margin-right 30px

.hamburger-menu-container
  display none

@media screen and (max-width: 876px)
  .site-navbar
    justify-content space-between
    height 56px
    padding 0 18px

  .navbar-option-link-container
    display none

  .navbar-option-link
    display block
    height auto
    display block
    text-align left
    flex-basis 100%
      
  .navbar-hamburguer
    width 33px
    height 33px
    border-radius 50%
    background-color #000
    cursor pointer
    display flex
    justify-content center
    
  .align-content-hamburguer
    display flex
    flex-direction column
    justify-content center
    
  .line-hamburguer-base
    height 1px
    background-color #fff

  .line-hamburguer-lg
    width: 15px
    
  .line-hamburguer-md
    width 7.5px
    
  .margin-vertical-4px
    margin 4px 0px

  .hamburger-menu-container
    background-color #000
    display inline
    left 0
    padding-bottom 50px
    position fixed
    top 0
    width 0%
    z-index 13
    bottom 0
    overflow scroll
    -webkit-transition width 0.5s
    transition width 0.5s
    
  .hamburger-menu-header
    align-items center
    display flex
    flex-direction row
    justify-content space-between
    padding 22px 36px 50px 36px
    
  .hamburger-logo
    height 33px
    width 102px
    
  .hamburger-close-container
    cursor pointer
    
  .hamburger-close
    height 16px
    width 16px

  .hamburger-option-link
    color #fff
    cursor pointer
    font-size remify(12)
    letter-spacing 1.4px
    text-transform uppercase

    &.link-active
      font-family 'OpenSans'
      font-weight 800
      
    &:hover, &.link-active
      .hamburger-stroke
        width 100%
        background-color #fff
        
  .hamburger-text
    padding 10px 0
