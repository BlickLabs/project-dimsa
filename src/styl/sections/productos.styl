.products
  &-container
    margin 75px 0

    padding 0 0 0 10%
  &-title
    color $dGrayText
    font-size $font35
    letter-spacing 0.5px

  &-cards-container
    display flex
    flex-wrap wrap
    margin-top 80px

  &-card-anchor
    margin 0 47px 47px 0

@media screen and (max-width 786px)
  .products
    &-container
      margin-top 0

    &-card-anchor
      margin 0 0 10px 0

@media screen and (max-width 481px)
  .products-modifier
    height 256px
    width 256px
