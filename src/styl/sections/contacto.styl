.contact
  &-content
    display flex
    flex-direction row
    justify-content space-between
    margin-bottom 100px

  &-form-section
    margin-top 56px
    padding-left 130px

  &-title
    color $dGrayText
    font-size $font35
    letter-spacing 0.3px

  &-description
    color $dGrayText
    font-size $font21
    letter-spacing 1.1px
    line-height 34px

    &-container
      margin-bottom 42px
      max-width 390px

  &-form
    &-contents
      display flex
      flex-direction column
      margin-bottom 34px

    &-labels,
    &-inputs,
    &-textarea
      color $dGrayText
      font-size $font14
      letter-spacing 1px

    &-inputs
      border-left none
      border-right none
      border-top none
      border-bottom solid 2px #e7e7e7
      transition all 0.4s
      padding 17px 20px 3px 20px
      &:focus
        border-bottom solid 2px $dRedText
        transition all 0.4s

    &-textarea
      height 148px
      margin-top 35px
      padding 20px

  &-panel
    background-image url("../img/backgrounds/contact-panel.jpg")
    background-position center
    background-repeat no-repeat
    background-size cover
    height 898px
    padding 58px 98px
    width 500px

    &-title
      color $dWhite
      font-size $font35
      letter-spacing 0.3px

      &-container
        margin-bottom 50px

    &-contents
      display flex
      flex-direction row
      margin-bottom 49px

    &-icon
      height auto
      width 19px

      &-container
        margin-right 22px
        width 19px

    &-description
      color $dWhite
      font-size $font14
      letter-spacing 1.2px
      line-height 21px

  &-separator
    background-image url("../img/backgrounds/contact-separator.jpg")
    background-position center
    background-repeat no-repeat
    background-size cover
    height 246px
    left 0
    margin 0 auto
    position absolute
    right 0
    top 73px
    width 90%

    &-container
      position relative

    &-background
      background-color $dGrayBackg
      height 400px
      width 90%

.fb-icon
  margin-left 5px
  width 11px

@media screen and (max-width 786px)
  .contact
    &-content
      flex-direction column
      margin-bottom 50px

    &-form-section
      margin-bottom 60px
      padding 0 35px

    &-panel
      height auto
      margin 0 auto
      padding 30px 40px
      width 300px

    &-separator
      height 130px
      top 40px

      &-background
        height 250px
