{% extends "partials/base.njk" %}

{% block meta %}
  <title>Dimsa | Especialidades</title>
{% endblock %}

{% block content %}
  <div class="helvetica-neue-medium">
    <div class="allproducts-container">
      <div class="allproducts-panel-container allproducts-desktop">
        <ul class="select-option-container allproducts-option-container helvetica-neue-bold">
        {% for specialtie in specialties %}
          <a class="allproducts-scroll" href="#{{specialtie.data}}">
            <li class="select-option allproducts-option {{specialtie.active}}" data-section="{{specialtie.data}}">
              <span>{{specialtie.title}}</span>
            </li>
          </a>
        {% endfor %}
        </ul>
      </div>

      <div class="allproducts-title-container allproducts-mobile">
        <h1 class="allproducts-title helvetica-neue-bold">Especialidades</h1>
        <div class="red-decorator"></div>
      </div>

      <div class="allproducts-panel-container allproducts-mobile">
        <ul class="select-option-container allproducts-option-container helvetica-neue-bold">
        {% for specialtie in specialties %}
          <a class="allproducts-scroll" href="#{{specialtie.data}}">
            <li class="select-option allproducts-option {{specialtie.active}}" data-section="{{specialtie.data}}">
              <span>{{specialtie.title}}</span>
            </li>
          </a>
          <div class="info-selected-option-container">
            <div class="{{specialtie.data}} info-selected-option allproducts-content {{specialtie.active}}" id="{{specialtie.data}}">
              <div class="allproducts-info-container">
                <div class="allproducts-product-title-container">
                  <h2 class="allproducts-product-title">{{specialtie.title}}</h2>
                </div>
                <div class="allproducts-subtitle-container">
                  <h2 class="allproducts-subtitle helvetica-neue-bold">Características</h2>
                </div>
                {% for characteristic in specialtie.characteristics %}
                <span class="allproducts-description">{{characteristic.characteristic}}</span><br>
                {% endfor %}
              </div>
              <div class="allproducts-info-container">
                <div class="allproducts-subtitle-container">
                  <h2 class="allproducts-subtitle">Beneficios</h2>
                </div>
                {% for benefit in specialtie.benefits %}
                <span class="allproducts-description">{{benefit.benefit}}</span><br>
                {% endfor %}
              </div>
              <div class="allproducts-info-container">
                <div class="allproducts-subtitle-container">
                  <h2 class="allproducts-subtitle">Usos</h2>
                </div>
                {% for use in specialtie.uses %}
                <span class="allproducts-description">{{use.use}}</span><br>
                {% endfor %}
              </div>
              <div class="allproducts-img-container">
                <img class="allproducts-img" src="img/allproducts/specialties/{{specialtie.image}}">
              </div>
            </div>
          </div>
        {% endfor %}
        </ul>
      </div>

      <div class="info-selected-option-container allproducts-desktop">
        <div class="allproducts-title-container allproducts-desktop">
          <h1 class="allproducts-title helvetica-neue-bold">Especialidades</h1>
          <div class="red-decorator"></div>
        </div>
      {% for specialtie in specialties %}
        <div class="{{specialtie.data}} info-selected-option allproducts-content {{specialtie.active}}" id="{{specialtie.data}}">
          <div class="allproducts-info-container">
            <div class="allproducts-product-title-container">
              <h2 class="allproducts-product-title">{{specialtie.title}}</h2>
            </div>
            <div class="allproducts-subtitle-container">
              <h2 class="allproducts-subtitle helvetica-neue-bold">Características</h2>
            </div>
            {% for characteristic in specialtie.characteristics %}
            <span class="allproducts-description">{{characteristic.characteristic}}</span><br>
            {% endfor %}
          </div>
          <div class="allproducts-info-container">
            <div class="allproducts-subtitle-container">
              <h2 class="allproducts-subtitle">Beneficios</h2>
            </div>
            {% for benefit in specialtie.benefits %}
            <span class="allproducts-description">{{benefit.benefit}}</span><br>
            {% endfor %}
          </div>
          <div class="allproducts-info-container">
            <div class="allproducts-subtitle-container">
              <h2 class="allproducts-subtitle">Usos</h2>
            </div>
            {% for use in specialtie.uses %}
            <span class="allproducts-description">{{use.use}}</span><br>
            {% endfor %}
          </div>
          <div class="allproducts-img-container">
            <img class="allproducts-img" src="img/allproducts/specialties/{{specialtie.image}}">
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
